#:kivy 2.0.0

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        spacing: 20

        Label:
            text: 'Приложение'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: 30
            color: (0, 0, 0, 1)

        RoundedButton:
            text: 'Начать'
            size_hint: (1, .2)
            on_press: app.root.current = 'main'

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        label: label.__self__
        size: root.width, root.height
        padding: 20
        spacing: 20

        Label:
            id: label
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: 'Стоя у гимнастической стенки принять правильную осанку'
            font_size: 25
            color: (0, 0, 0, 1)

        BoxLayout:
            RoundedButton:
                text: '<--'
                font_size: 45
                color: [1, 1, 1, 1]
                pos_hint: {'center_x': 0.5}
                size_hint: (1, .2)
                on_press: root.change_ex_prev(label)

            RoundedButton:
                text: '-->'
                font_size: 45
                color: [1, 1, 1, 1]
                pos_hint: {'center_x': 0.5}
                size_hint: (1, .2)
                on_press: root.change_ex_next(label)

<EndingScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        spacing: 20

        Label:
            text: 'Поздравляю'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: 35
            color: (0, 0, 0, 1)

        RoundedButton:
            text: 'Закрыть'
            size_hint: (1, .2)
            color: [0, 0, 0, 1]
            on_press: app.stop()

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/225, 84/225, 150/225, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]